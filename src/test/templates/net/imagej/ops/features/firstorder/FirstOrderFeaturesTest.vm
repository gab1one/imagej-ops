package net.imagej.ops.features.firstorder;

import static org.junit.Assert.*;

import java.util.Collection;

import net.imagej.ops.OutputFunction;
import net.imglib2.Pair;
import net.imglib2.img.Img;

import org.junit.Test;
import net.imagej.ops.features.firstorder.FirstOrderFeatures;
import net.imagej.ops.features.AbstractFeatureTest;

/**
 * Testing implementations of {@link FirstOrderFeaturesTest}
 
 * @author Christian Dietz (University of Konstanz)
 */
public class FirstOrderFeaturesTest extends AbstractFeatureTest {

#foreach ($op in $ops)

	/**
	 * Testing {@link Feature} implementation of {@link ${op.iface}}
	 */
	@Test
	public void ${op.iface}FeatureTest() {
		
	   OutputFunction<Img, Collection<Pair<String, Double>>> compiled = fs
				.compileFeature(FirstOrderFeatures.${op.iface}Feature.class, Img.class);

		assertEquals(${op.empty}, compiled.compute(empty).iterator().next().getB(),
				SMALL_DELTA);

		assertEquals(${op.random}, compiled.compute(random).iterator().next().getB(),
				SMALL_DELTA);

		assertEquals(${op.constant}, compiled.compute(constant).iterator().next().getB(),
				SMALL_DELTA);
		
	}
#end

}
